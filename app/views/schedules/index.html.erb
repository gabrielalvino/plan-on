<div class="container col-8 text-center">
  <section>
    <div class="text_title_schedules">
      <h1>SCHEDULE</h1>
    </div>
  </section>

  <%= month_calendar(events: @schedules, attribute: :date) do |date, schedules| %>
    <%= date.strftime('%d') %>
    <ul>
      <% schedules.each do |schedule| %>
        <li>

<%= link_to " #{l schedule.date, format: '%H:%M'} #{schedule.title}", edit_schedule_path(schedule) %>
        </li>
      <% end %>
    </ul>
  <% end %>

   <div>
    <button type="button" class="btn btn-purple rounded-pill mt-3 mb-5" data-bs-toggle="modal" data-bs-target="#scheduleModal">
      Add an event
    </button>
    </div>
</div>

<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="scheduleModal" tabindex="-1" aria-labelledby="scheduleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content modal-content-schedule">
      <div class="modal-header">
        <h5 class="modal-title" id="scheduleModalLabel">Add an event</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="h-100" data-controller="flatpickr" >
          <%= simple_form_for @schedule do |f| %>
            <%= f.input :title %>
            <div class="flatpickr">
              <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
            </div>
            <div class="d-flex justify-content-center">
              <%= f.submit class: "btn btn-purple rounded-pill mt-2"%>
            </div>
            <% end %>
        </div>
    </div>
      </div>
    </div>
  </div>
</div>
